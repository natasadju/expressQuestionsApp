<div class="container py-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-8 col-lg-6 col-xl-4">
            <div class="card bg-dark text-white" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                    <div class="mt-3 mb-4">
                        <div class="rounded-circle overflow-hidden mx-auto" style="width: 150px; height: 150px;">
                            <img class="img-fluid" src="{{#if user.photo_path}}/images/{{user.photo_path}}{{else}}https://t4.ftcdn.net/jpg/00/64/67/63/360_F_64676383_LdbmhiNM6Ypzb3FM4PPuFP9rHe7ri8Ju.jpg{{/if}}" alt="User Photo">
                        </div>
                    </div>
                    <h4 class="mb-2">{{user.username}}</h4>
                    <p class="text-muted mb-4">{{user.email}}</p>
                    <div class="d-flex justify-content-between text-center mt-4 mb-2">
                        <div>
                            <p class="mb-2 h5">{{qs}}</p>
                            <p class="text-muted mb-0">Questions posted</p>
                        </div>
                        <div class="px-3">
                            <p class="mb-2 h5">{{as}}</p>
                            <p class="text-muted mb-0">Answers posted</p>
                        </div>
                    </div>
                    <form action="/users/{{user._id}}/uploadPhoto" method="post" enctype="multipart/form-data" class="mt-4">
                        <div class="input-group mb-3">
                            <div class="custom-file">
                                <input type="file" required name="photo" class="custom-file-input" id="inputGroupFile02">
                                <label class="custom-file-label" for="inputGroupFile02">Choose file</label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-outline-light btn-lg btn-block">Upload Photo</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
